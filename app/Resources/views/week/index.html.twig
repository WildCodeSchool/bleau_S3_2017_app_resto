{% extends 'base.html.twig' %}

{% block body %}
    <h1>Weeks list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Start_week</th>
                <th>End_week</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for week in weeks %}
            <tr>
                <td><a href="{{ path('week_show', { 'id': week.id }) }}">{{ week.id }}</a></td>
                <td>{% if week.startweek %}{{ week.startweek|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if week.endweek %}{{ week.endweek|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ week.message }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('week_show', { 'id': week.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('week_edit', { 'id': week.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('week_new') }}">Create a new week</a>
        </li>
    </ul>
{% endblock %}
