{% extends 'base.html.twig' %}

{% block header_btn %}

    <!-- Modal Trigger -->
    <a class="waves-effect waves-light btn" href="#modal1">News - letter</a>



  <!-- Modal Structure -->
    <div id="modal1" class="modal">
        <div class="modal-content">
            <div class="row">
                <div class="input-field col s12">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <input type="submit" class="modal-action modal-close waves-effect waves-green btn-flat" value="Soumettre"></input>
                        {{ form_end(form) }}

                </div>
            </div>
        </div>
        <div class="modal-footer">

        </div>
    </div>

<a class="btn tooltipped boutton btn_custom" data-position="bottom" data-delay="50" data-tooltip="Voir les profils des employés" href="{{ path('app_resto_admin') }}">A Propos</a>
{% endblock %}

{% block body %}
    <div class="container container_custom client">

        <div class="parallax-container parallax-main">
            <div class="parallax"><img src="http://www.newrest.eu/wp-content/uploads/2015/11/Newrest-Catering-Chef.jpg"></div>
        </div>
        <form class="form_resa" action="index.php" method="post">

            <div class="row row_custom menu_semaine">
                <div class="col s12">
                    <h2>Semaine du **/** au  **/**</h2>
                </div>
            </div>

            <div class="row row_custom">

                <div class="col s10 offset-s1">
                    <div class="row row_custom" id="menu">
                        {% for menu in menus %}
                        <div class="col m2 s12 {% if menu.day == 'Lundi' %}offset-m1{% endif %} dayli">
                            <div class="row row_custom">
                                <div class="col s12 dayli_col">
                                    <a href="#{{ menu.day }}">
                                        <h3>{{ menu.day }}</h3>
                                        <ul>
                                            <li>Entrées</li>
                                            <li>{{ menu.p1 }}</li>
                                            <li>{{ menu.p2 }}</li>
                                            <li>Desserts</li>
                                        </ul>
                                    </a>
                                </div>
                            </div>
                            <div class="row row_custom">
                                <p class="col m12 s6 center-align">
                                    <input name="resa_{{ menu.day }}" type="radio" id="normal_{{ menu.day }}" />
                                    <label for="normal_{{ menu.day }}">Menu normal</label>
                                </p>
                                <p class="col m12 s6 center-align">
                                    <input name="resa_{{ menu.day }}" type="radio" id="snack_{{ menu.day }}" />
                                    <label for="snack_{{ menu.day }}">Menu snack</label>
                                </p>
                            </div>
                        </div>
                       {% endfor %}
                        <div class="row row_custom">
                            <button class="btn waves-effect waves-orange btn_custom col m2 s4 offset-m5 offset-s4 align-center" type="submit" name="action">Envoyez
                                <i class="material-icons right"></i>
                            </button>
                        </div>
                    </div>
                </div>

            </div>

        </form>
        {% for menu in menus %}
        <div id="{{ menu.day }}" class="modal">
            <div class="modal-content">
                <div class="row row_custom col s10 offset-s1 menu_modal">
                    <h4 class="center-align">Au menu le {{ menu.day }}</h4>
                    <ul class="center-align">
                        <li><span class="type_meal_modal">Entrées</span><br>{{ menu.e1 }}, {{ menu.e2 }}, {{ menu.e3 }}</li>
                        <li><span class="type_meal_modal">Plats</span><br>{{ menu.p1 }}<br>{{ menu.p2 }}</li>
                        <li><span class="type_meal_modal">Desserts</span><br>{{ menu.d1 }}, {{ menu.d2 }}, {{ menu.d3 }}</li>
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#!" class=" modal-action modal-close btn-flat btn_custom">Fermer</a>
            </div>
        </div>
        {% endfor %}
        <div class="row row_custom">
            <div class="col s8 offset-s2 snack">
                <h2>Menu snack</h2>
                <p>Tout les jours le chef mets à la disposition des plus pressés un menu de restauration rapide au prix de 5.50e.<br>Cette nouvelle formule comprends :</p>
                <ul>
                    <li>pizza, croque-monsieur, quiche, hot-dog, croissant au jambon(au choix)</li>
                    <li>des frites</li>
                    <li>une boisson</li>
                </ul>
            </div>
        </div>

        <div class="parallax-container">
            <div class="parallax">
                <img src="http://www.newrest.eu/wp-content/uploads/2015/12/Newrest-Catering-BI.jpg" alt="photo des élèves de l'école des mines atablés">
            </div>
        </div>

        <div class="row row_custom">
            <div class="col m4 s6 offset-m4 offset-s3 show-form_com1 center-align">
                <a class="waves-effect waves-orange btn btn_custom">Donnez-nous votre avis!</a>
            </div>
            <div class="col m6 s10 offset-m3 offset-s1 form_com1">
                {% block addCom %}
                    {{ form_start(formCom) }}
                    {{ form_widget(formCom) }}
                    <input type="submit" value="Create" class="btn waves-effect waves-orange btn_custom col m2 s4 offset-m5 offset-s4 align-center"/>
                    {{ form_end(formCom) }}
                {% endblock %}
            </div>
        </div>

        <div class="row row_custom">
            <div class="col m8 s12 offset-m2 coms">
                <div class="row">
                    {% block coms %}
                        {{ render( controller("AppRestoBundle:Comment:indexClient")) }}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
    <footer class="page-footer" id="footer_custom">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5>Footer Content</h5>
                    <p class="text-lighten-4">You can use rows and columns here to organize your footer content.</p>
                </div>
                <div class="col l4 offset-l2 s12">
                    <h5>Contacts</h5>
                    <ul>
                        <li><a class="text-lighten-3" href="#!">Facebook</a></li>
                        <li><a class="text-lighten-3" href="#!">Twitter</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright ">
            <div class="container">
                © 2017 Copyright Text
                <a class="text-lighten-4 right" href="#!">Contactez-nous</a>
            </div>
        </div>
    </footer>
{% endblock %}